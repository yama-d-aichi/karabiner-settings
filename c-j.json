{
  "title": "Ctrl-j to Ctrl-J",
  "rules": [
    {
      "description": "Using AquaSKK on Apple Terminal",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "j",
              "modifiers": [
                "left_control",
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal"
              ]
            }
          ]
        }
      ]
    }
  ]
}